@model System.Data.DataTable
@using System.Data;

<div class="header">Please Upload Excel File </div>

@using (Html.BeginForm("Index", "Home", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <div class="form-group">
        <input type="file" id="dataFile" name="upload" />
    </div>

    <div class="form-group">
        <input type="submit" value="Upload" class="btn btn-default" />
    </div>

    if (Model != null)
    {
        <div class="subheader">Your Excel has following City Entries</div>
        <br />
        <table id="datatable" border="1" cellpadding="5">
            <thead>
                <tr>
                    @foreach (DataColumn col in Model.Columns)
                    {
                        <th>@col.ColumnName</th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (DataRow row in Model.Rows)
                {
                    <tr>
                        @foreach (DataColumn col in Model.Columns)
                        {
                            <td>@row[col.ColumnName]</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
}
<style>
    .header {
        font-size: xx-large;
        color: #808080 !important;
        margin-top: 6px;
        font-family: sans-serif;
        font-weight: bold;
        display: flex;
    }

    .subheader {
        font-size: 16px;
        color: black !important;
        margin-top: 3px;
        font-family: sans-serif;
        font-weight: bold;
        display: flex;
    }

    #datatable {
        font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 50%;
    }

        #datatable td, #datatable th {
            border: 1px solid #ddd;
            padding: 8px;
        }

        #datatable tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        #datatable tr:hover {
            background-color: #ddd;
        }
</style>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Weather Service</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        @Html.ActionLink("Refresh Page", "Index", "Home")
    </div>
    <br />
    <div class="container body-content"style="padding-left: 250px;">
        @RenderBody()
        <br /><br /><br /><br /><br />
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My Weather Service Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
